pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Verify Frontend Directory') {
            steps {
                sh 'ls -l frontend'
            }
        }
        stage('Docker Login') {
            steps {
                // Add your Docker login commands here
            }
        }
        stage('Build Frontend') {
            steps {
                script {
                    sh 'docker build -t my-frontend-app -f frontend/Dockerfile .'
                }
            }
        }
        // Add other stages as necessary
    }
}
